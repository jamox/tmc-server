<h1>Submission <%= @submission.id %></h1>
<%= render 'submission_details' %>

<% if can? :update, @submission %>
  <div class="row-fluid">
    <div class="span11">
      <h2>Rerun submission</h2>
        <div class="well">
          <div>
            <%= form_tag submission_path(@submission), :method => :put do %>
              <%= hidden_field_tag('rerun', '1')  %>
              <div>
                <%= button_tag 'Rerun submission', :type => 'submit', class: "btn btn-danger" %>
              </div>
              (may add points; never deletes points)
            <% end %>
          </div>
      </div>
  </div>
<% end %>

<ul class="nav nav-tabs" id="myTab">
  <% if @submission.feedback_answers.any? %>
    <li><a href="#feedback" >Feedback</a></li>
  <% end %>
  <% if @submission.pretest_error %>
    <li><a href="#compilationError" >Compilation Error</a></li>
  <% end %>
  <% unless @submission.pretest_error %>
    <li><a href="#testResults" >Test Results</a></li>
  <% end %>
  <li class="<%= unless @is_paste then 'active' end %>"><a href="#logs">Logs</a></li>
  <li class="<%= if @is_paste then 'active' end %>"><a href="#files">Files</a></li>
</ul>

<div class="row-fluid">
  <div class="span12">
    <div class="tab-content">
      <% if @submission.feedback_answers.any? %>
        <div class="tab-pane" id="feedback">
          <% unless @submission.feedback_answers.empty? %>
            <h2>Feedback</h2>
            <% answers = @submission.feedback_answers.to_a.sort_by {|a| a.feedback_question.position }%>
            <% for answer in answers %>
              <div class="feedback-question">
                <%= answer.feedback_question.question %>
              </div>
              <p class="feedback-answer"><%= render_feedback_answer(answer) %></p>
            <% end %>
          <% end %>
        </div>
      <% end %>

      <% if @submission.pretest_error %>
        <div class="tab-pane" id="compilationError">
          <% if @submission.pretest_error %>
            <pre class="error"><%= @submission.pretest_error %></pre>
          <% end %>
        </div>
      <% end %>

      <% unless @submission.pretest_error %>
        <div class="tab-pane" id="testResults">
          <%= render 'submissions/details' %>
        </div>
      <% end %>

      <div class="tab-pane <%= unless @is_paste then 'active' end %>" id="logs">
        <%= render 'logs' %>
      </div>

      <div class="tab-pane <%= if @is_paste then 'active' end %>" id="files">
        <%= render :partial => 'files/files', :locals => {:files => @files} %>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
    $('#myTab a').click(function (e) {
      console.log($(this));
      console.log("E: " + e);
      $(this).tab('show');
    })
  });

</script>

<%= link_back %>


